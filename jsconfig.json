{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"]
        },
        "module": "ES6",
        "target": "ES6",
        "moduleResolution": "node",
        "jsx": "preserve",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false
    },
    "typeRoots": ["./node_modules/phaser/types"],
    "types": ["Phaser"],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "dist"]
}
